name: android-build
run-name: ${{ github.actor }} is build android application ðŸš€
on: [push]
jobs:
  both-matrix:
    strategy:
      matrix:
        os: [ubuntu-latest, macos-latest]
    if: github.repository == 'konradhanus/inheartive.io'
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: '14'
      - run: yarn install
      - run: npm install -g nx
      - run: nx run mobile:build-android   
